<% if squirrel.errors.any? %>
  <% squirrel.errors.full_messages.each do |msg| %>
     <%= msg %>
  <% end %>
<% end %>

<%= form_for squirrel do |f| %>

  <fieldset>
  <legend>Squirrel Details</legend>
  <% [:name, :breed, :color, :weight].each do |field| %>
    <div>
      <%= f.label field %>
      <%= f.text_field field %>
    </div>
  <% end %>
  <div>
    <%= f.label :date_of_birth %>
    <%= f.date_field :date_of_birth %>
  </div>

  <div>
    <%= f.submit %>
  </div>


  </fieldset>
<% end %>